<div>
  <h3 class="text-center">Shopping List</h3>
  <div class="flex justify-content-between">
    <p>Amount of food items to buy: <%= @foods.count %></p>
    <p>Total value of food needed $: <%= @foods.sum(:price).truncate() %></p>
  </div>
</div>
<div class="p-3 border">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= 1 %></td> 
          <td>$<%= food.price.truncate() %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
</div>