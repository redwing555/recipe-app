    <table class="table table-striped">
        <thead>
            <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <% @food_with_recipes.each do |recipe_food| %>
                <tr>
                    <td><%= recipe_food.food.name %></td>
                    <td><%= recipe_food.quantity %></th>
