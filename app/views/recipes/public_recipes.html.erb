<div class="flex space-between mx-5">
  <h3 class="card-title hover-text-gray cursor-pointer">
    List of Recipes
  </h3>
  <h3 class="card-title hover-text-gray cursor-pointer">
    <%= link_to "View all recipes", recipes_path %>
  </h3>
</div>

<div class="border-black flex flex-col w-full">
  <table>
    <tr>
      <th>Recipe</th>
      <th>Preparation time</th>
      <th>Cooking time</th>
      <th>Description</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.preparation_time %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.description %></td>
        <td>
          <%= button_to 'Delete',
            recipe_path(recipe),
            method: :delete,
            data: {confirm: 'Are sure you want to delete this recipe'}
          %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

